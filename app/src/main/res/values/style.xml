<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainBottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:background">?attr/bottomSheetDialogBackgroundColor</item>
        <item name="android:paddingStart">@dimen/main_bottom_sheet_padding</item>
        <item name="behavior_hideable">true</item>
        <item name="behavior_peekHeight">@dimen/main_bottom_sheet_peek_height</item>
    </style>
    <style name="Header">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Header.BottomSheetDialogHeader">
        <item name="android:textColor">?attr/bottomSheetDialogHeaderTextColor</item>
    </style>
    <style name="BottomSheetLine">
        <item name="android:layout_width">@dimen/bottom_sheet_line_width</item>
        <item name="android:layout_height">@dimen/bottom_sheet_line_height</item>
        <item name="android:layout_marginTop">@dimen/bottom_sheet_line_margin_top</item>
        <item name="android:background">@color/bottom_sheet_line_color</item>
    </style>
    <style name="BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>
</resources>